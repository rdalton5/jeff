{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build VST Plugin (Debug)",
            "type": "shell",
            "command": "cargo",
            "args": ["build"],
            "group": "build",
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "echo \"Building universal VST3 bundle...\" && cargo nih-plug bundle jeff --release && cargo nih-plug bundle jeff --release --target x86_64-pc-windows-gnu && echo \"\" && echo \"Universal plugin built:\" && ls -la target/bundled/ && echo \"\" && echo \"VST3 bundle contents:\" && ls -la target/bundled/jeff.vst3/Contents/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Check Code",
            "type": "shell",
            "command": "cargo",
            "args": ["check"],
            "group": "build",
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Target Directory",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "cargo clean && echo 'Target directory cleaned'"],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}