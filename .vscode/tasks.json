{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build VST Plugin (Debug)",
            "type": "shell",
            "command": "cargo",
            "args": ["build"],
            "group": "build",
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Bundle VST Plugin (All Platforms)",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "cargo nih-plug bundle jeff --release && cargo nih-plug bundle jeff --release --target x86_64-pc-windows-gnu"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "cargo",
            "args": ["clean"],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Check Code",
            "type": "shell",
            "command": "cargo",
            "args": ["check"],
            "group": "build",
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Install VST3 Plugin",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "mkdir -p ~/.vst3 && cp -r target/bundled/jeff.vst3 ~/.vst3/ && mkdir -p ~/.clap && cp target/bundled/jeff.clap ~/.clap/ && echo 'Plugin installed to ~/.vst3/ and ~/.clap/'"],
            "group": "build",
            "dependsOn": "Bundle VST Plugin (All Platforms)",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}